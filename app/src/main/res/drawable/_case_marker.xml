<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape

            android:shape="oval">
            <size
                android:width="10dp"
                android:height="10dp"
                />
            <solid
                android:color="#000000"/>
            <stroke
                android:width="0.5dp"
                android:color="#000000"/>
        </shape>
    </item>
</layer-list>